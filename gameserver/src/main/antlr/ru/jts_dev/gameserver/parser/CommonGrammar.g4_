grammar CommonGrammar;

id  : 'id' '=' DECIMAL_LITERAL;

HOUR_MIN_OBJECT
    : '{' '0'..'2' '0'..'9' ':' '0'..'9' '0'..'9' '}'
    ;

array
	: EMPTY_ARRAY | '{' (array_value ';')* array_value '}'
	;

array_value
	: array | DECIMAL_LITERAL | IDENTIFIER | NAME | item_count_pair
	;

item_count_pair
    : NAME '=' DECIMAL_LITERAL;

literal
    :  DECIMAL_LITERAL
    |  FLOATING_POINT_LITERAL
    |  STRING_LITERAL
    ;

EMPTY_ARRAY : '{''}';

NAME
    : '[' (NAME_DIGIT)* ']'
    ;

NAME_DIGIT
    : ('A'..'Z' | 'a'..'z') ('A'..'Z' | 'a'..'z' | '0'..'9' | '_' | '\'')* ('A'..'Z' | 'a'..'z' | '0'..'9')
    ;

STRING_LITERAL
    :  '"' ( ESCAPE_SEQUENCE | ~('\\'|'"') )* '"'
    ;

fragment
ESCAPE_SEQUENCE
    :   '\\' ('b'|'t'|'n'|'f'|'r'|'\"'|'\''|'\\')
    |   UNICODE_ESCAPE
    ;

fragment
UNICODE_ESCAPE
    :   '\\' 'u' HexDigit HexDigit HexDigit HexDigit
    ;

DECIMAL_LITERAL
	: '-'? ('0' | '1'..'9' '0'..'9'*)
    ;

FLOATING_POINT_LITERAL
    :   ('0'..'9')+ '.' ('0'..'9')*
    ;

fragment
HexDigit
    : ('0'..'9'|'a'..'f'|'A'..'F')
    ;

WS  :   [ \r\t\u000C\n]+ -> skip;

LINE_COMMENT
    : '//' ~[\r\n]* '\r'? '\n' -> skip
    ;

IDENTIFIER
    :   LETTER (LETTER|JAVAIDDIGIT)*
    ;

fragment
LETTER
    :  '\u0024' |
       '\u0041'..'\u005a' |
       '\u005f' |
       '\u0061'..'\u007a' |
       '\u00c0'..'\u00d6' |
       '\u00d8'..'\u00f6' |
       '\u00f8'..'\u00ff' |
       '\u0100'..'\u1fff' |
       '\u3040'..'\u318f' |
       '\u3300'..'\u337f' |
       '\u3400'..'\u3d2d' |
       '\u4e00'..'\u9fff' |
       '\uf900'..'\ufaff'
    ;

fragment
JAVAIDDIGIT
    :  '\u0030'..'\u0039' |
       '\u0660'..'\u0669' |

       '\u06f0'..'\u06f9' |
       '\u0966'..'\u096f' |
       '\u09e6'..'\u09ef' |
       '\u0a66'..'\u0a6f' |
       '\u0ae6'..'\u0aef' |
       '\u0b66'..'\u0b6f' |
       '\u0be7'..'\u0bef' |
       '\u0c66'..'\u0c6f' |
       '\u0ce6'..'\u0cef' |
       '\u0d66'..'\u0d6f' |
       '\u0e50'..'\u0e59' |
       '\u0ed0'..'\u0ed9' |
       '\u1040'..'\u1049'
    ;